<% if (query) { %>
<h1 class="page-header"><%= count %> search results for "<%= query %>"</h1>
<div class="row">
  <div class="col-sm-12">
   <table class="table xtable-striped">
     <tbody>
     <% posts.forEach(function(post) { %>
       <tr>
         <td class="col-xs-9 col-md-10 col-lg-10" style="position: relative; padding: 5px 0;">
          
         <% if (site.options().post.voting.enabled == true) { %>
         <div class="media">
           <div class="media-left">
             <div style="width: 170px; display:block; margin: 10px 0; margin-right: 10px;" class="xpull-left hidden-xs">
               <% include ../partials/posts/vote-inline %> 
             </div>
             <div style="width: 80px; display: inline-block; margin: 5px 10px;" class="xpull-left visible-xs">
               <% include ../partials/posts/vote-inline %> 
             </div>
           </div>
           <div class="media-body">
         <% } %>
             <h3 href="<%= post.getUrl() %>" class="post-title" style="margin-top: 0px;"><a href="<%= post.getUrl() %>"><%= post.title %></a></h3>
             <% if (post.creator) { %>
             <a href="<%= post.getUrl() %>" class="text-default" style="text-decoration: none;">
               <img src="<%= post.creator.avatar(24)%>" alt="Avatar" height="24" width="24" hspace="3" class="img-circle" />
               <%= post.creator.profile.name || "Anonymous" %>
             </a>
             <% } %>
             <br class="visible-xs"/>
             <span href="<%= post.getUrl() %>" class="text-muted">
               <i class="fa fa-fw fa-clock-o"></i> <time class="timeago" datetime="<%= post.created.toISOString() %>"><%= post.created.toDateString() %></time>
             </span>
         <% if (site.options().post.voting.enabled == true) { %>
           </div>
         </div>
         <% } %>
         </td>
         <td class="col-xs-3 col-md-2 col-lg-2 text-right" style="padding: 5px 0;">
           <a href="<%= post.getUrl() %>" class="btn btn-primary" style="margin-top: 10px;"><i class="fa fa-fw fa-lg fa-comments"></i> <%= post.comments.length %> <i class="fa fa-fw fa-chevron-right"></i></a>
         </td>
       </tr>
     <% }) %>
     </tbody>
   </table>
  </div>
</div>
<% } else { %>
<br/>
<form method="GET" action="search" class="row">
  <div class="col-sm-offset-2 col-sm-6">
    <input name="q" type="text=" class="form-control input-lg" placeholder="Keywords"/>
  </div>
  <div class="col-sm-2">
    <button type="submit" class="btn btn-lg btn-block btn-primary">Search</button>
  </div>
</form>
<br/>
<% } %>