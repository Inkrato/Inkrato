<% if (site.getOptions().post.voting.enabled == true) { %>
<div class="media">
  <div class="media-body">
<% } %>
    <div class="row">
      <div class="col-md-4 col-lg-3 col-md-push-8 col-lg-push-9">
        <div class="media">
          <div class="media-left">
            <a href="#"><img src="<%= user.avatar(48) %>" height="48" width="48" alt="Avatar" class="img-circle"/></a>
          </div>
          <div class="media-body">
            <h3 class="media-heading"><%= user.profile.name || "Anonymous" %></h3>
            <span class="text-muted"><i class="fa fa-clock-o"></i> <time><%= new Date().toDateString() %></time></span>
          </div>
        </div>
        </h3>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-9 col-md-pull-4 col-lg-pull-3">
        <form role="form" method="post" action="/<%= site.getOptions().post.url %>/new" data-validator="true">
          <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
          <% include ../partials/posts/edit %>
          <div class="form-group text-right">
            <div class="col-sm-offset-2 col-sm-10"><button type="submit" class="btn btn-primary"><i class="fa fa-lg fa-fw fa-check"></i> Save</button></div>
          </div>
        </form>
      </div>
    </div>
<% if (site.getOptions().post.voting.enabled == true) { %>
  </div>
</div>
<% } %>