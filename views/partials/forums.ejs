<% forums.forEach(function(forum) { %>
<div class="row">  
  <div class="col-md-offset-1 col-md-10" href="/<%= forum.slug %>">
    <div class="forum-heading">
      <div class="media">
        <% if (forum.icon) { %>
        <div class="media-left" style="padding-right: 10px;">
          <h2 style="margin-top: 10px;"><a href="/<%= forum.slug %>"><i class="fa fa-lg fa-fw fa-<%= forum.icon %>"></i></a></h2>
        </div>
        <% } %>
        <div class="media-body">
          <div class="row">
            <div class="col-xs-9">
              <h2 style="margin-bottom: 0;"><a href="/<%= forum.slug %>" style="text-decoration: none;"><%= forum.name %></a></h2>
              <p class="text-muted lead" style="margin-bottom: 20px;">
                <%= forum.description %>
              </p>
            </div>
            <div class="col-xs-3">
              <span style="margin-top: 20px;" class="pull-right lead text-primary"><%= forum.postCount %> <i class="fa fa-lg fa-fw fa-<%= site.options().post.icon %>"></i></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% }); %>