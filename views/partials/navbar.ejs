<div class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container container-fluid">
    <div class="navbar-header">
      <a href="/" class="navbar-brand" data-shortcut-key="h"><i class="fa fa-lg fa-fw fa-home"></i></a>
      <span class="visible-xs">
        <a style="margin-right: 5px;" class="pull-left navbar-btn btn btn-primary" href="<%= site.options().post.path %>"><i class="fa fa-lg fa-<%= site.options().post.icon %>"></i></a>
        <% if (user) { %>
          <% if (typeof(topic) != "undefined" && topic != null) { %>
            <a class="pull-left navbar-btn btn btn-primary" href="<%= site.options().post.path %>/<%= topic.path %>/new"><i class="fa fa-lg fa-fw fa-plus-circle"></i> New</a>
          <% } else { %>
            <a class="pull-left navbar-btn btn btn-primary" href="/new"><i class="fa fa-lg fa-fw fa-plus-circle"></i> New</a>
          <% } %>
        <% } else { %>
        <a class="pull-left navbar-btn btn btn-primary" href="/signup" data-dismiss="modal" data-toggle="modal" data-target="#signupModal"  data-shortcut-key="n"><i class="fa fa-lg fa-fw fa-plus-circle"></i> New</a>
        <% } %>
      </span>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-main">
        <li class="visible-xs" style="padding: 0 10px 0 10px; margin-bottom: 10px;">
          <form name="search-posts" method="get" action="/search" class="form-horizontal">
            <div class="input-group input-group-search"> 
              <input name="q" value="<%= typeof(query) != "undefined" ? query : '' %>" type="search" class="form-control rounded" placeholder="Search" />
              <div class="input-group-btn">
                <button type="submit" name="search" class="btn btn-default rounded"><i class="fa fa-search"></i></button>
              </div>
            </div>
          </form>
        </li>
        <li <% if (path.match(new RegExp("^"+site.options().post.path))) { %>class="active"<% } %>><a href="<%= site.options().post.path %>"><i class="fa fa-lg fa-fw fa-<%= site.options().post.icon %>"></i> <%= site.options().post.name %></a></li>
        <li <% if (path.match("^\/contact")) { %>class="active"<% } %>><a href="/contact"><i class="fa fa-lg fa-fw fa-envelope"></i> Contact</a></li>
      </ul>
      <span class="hidden-xs">
        &nbsp;
        <% if (user) { %>
          <% if (typeof(topic) != "undefined" && topic != null) { %>
            <a class="navbar-btn btn btn-primary" href="<%= site.options().post.path %>/<%= topic.path %>/new" data-dismiss="modal" data-toggle="modal" data-target="#newPostModal" data-shortcut-key="n"><i class="fa fa-lg fa-fw fa-plus-circle"></i> New</a>
          <% } else { %>
            <a class="navbar-btn btn btn-primary" href="/new" data-dismiss="modal" data-toggle="modal" data-target="#newPostModal" data-shortcut-key="n"><i class="fa fa-lg fa-fw fa-plus-circle"></i> New</a>
          <% } %>
        <% } else { %>
        <a class="navbar-btn btn btn-primary" href="/signup" data-dismiss="modal" data-toggle="modal" data-target="#signupModal"  data-shortcut-key="n"><i class="fa fa-lg fa-fw fa-plus-circle"></i> New</a>
        <% } %>
      </span>
      <ul class="nav navbar-right navbar-nav">
        <% if (user) { %>
        <li class="dropdown <% if (path.match("^\/contact")) { %>class="active"<% } %>">
          <a href="/profile" data-toggle="dropdown" class="dropdown-toggle">
            <img src="<%= user.avatar(30) %>" alt="Avatar" class="img-circle" style="position: relative; top: -2px; height: 30px; width: 30px; margin: -15px 5px;"  />
            <%= user.profile.name || user.email || user.id %>
            <i class="fa fa-fw fa-caret-down"></i>
          </a>
          <ul class="dropdown-menu">
            <li><a href="/profile" data-shortcut-key="p"><span class="fa fa-lg fa-fw fa-user"></span> Profile</a></li>
            <li class="divider"></li><li><a href="/logout"><span class="fa fa-lg fa-fw fa-sign-out"></span> Logout</a></li>
          </ul>
        </li>
        <% } else { %>
        <li><a href="/login" data-toggle="modal" data-dismiss="modal" data-target="#loginModal"><i class="fa fa-lg fa-fw fa-sign-in"></i> Log in</a></li>
        <li><a href="/signup" data-toggle="modal" data-dismiss="modal" data-target="#signupModal"><i class="fa fa-lg fa-fw fa-user-plus"></i> Sign up</a></li>
        <% } %>
      </ul>
    </div>
  </div>
</div>